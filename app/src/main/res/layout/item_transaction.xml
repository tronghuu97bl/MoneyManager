<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewTran"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:elevation="100dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_tran_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="$ 0.0"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_tran_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_tran_amount"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/item_tran_receipt"
            android:text="description"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_tran_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_tran_des"
            android:layout_marginLeft="10dp"
            android:text="Date"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/item_tran_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_tran_date"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:text="transaction type"
            android:textSize="16dp" />

        <!--<TextView
            android:id="@+id/item_tran_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_tran_type"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:text="id"
            android:textSize="16dp" />-->

        <TextView
            android:id="@+id/item_tran_receipt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="Receipt"
            android:textSize="16dp"
            android:textStyle="bold" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>